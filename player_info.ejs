<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				<% if(result_2){
				var image_src = result_2.img_src;
				}
				else
				{
				var image_src = "../resources/img/helmet.jpg";
				}%>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
								<% if (result_1)
								{
							 	var option= '';
							 	result_1.forEach(function(item)
								{
							 	option += '<option value="' + item.id + '">' + item.id + ': ' + item.name + '</option>'
							 	}); %>
							 	<%- option %> <% } %>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
							<th>Year</th>
							<td> <% if(result_2){ %> <%- result_2.year %> <% } %>	</td>
						</tr>
						<tr>
							<th>Major</th>
							<td> <% if(result_2){ %> <%- result_2.major %> <% } %>	</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td> <% if(result_3){ %> <%- result_3 %> <% } %>	</td>
						</tr>
						<tr>
							<td>Passing Yards: <% if(result_2){ %> <%- result_2.passing_yards %> <% } %> </td>
							<td>Avg. Passing Yards: <% if(result_2 && result_3){%> <%- parseInt(result_2.passing_yards/result_3) %> <% } %> </td>
						</tr>
						<tr>
							<td>Rushing Yards: <% if(result_2){ %> <%- result_2.rushing_yards %> <% } %></td>
							<td>Avg. Rushing Yards: <% if(result_2 && result_3){%> <%- parseInt(result_2.rushing_yards/result_3) %> <% } %> </td>
						</tr>
						<tr>
							<td>Receiving Yards: <% if(result_2){ %> <%- result_2.receiving_yards %> <% } %> </td>
							<td>Avg. Receiving Yards: <% if(result_2 && result_3){%> <%- parseInt(result_2.receiving_yards/result_3) %> <% } %> </td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
